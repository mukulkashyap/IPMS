@using IPMS.Helper;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link type="image/x-icon" href="~/favicon.ico" rel="shortcut icon" />

    <!-- google font libraries -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300' rel='stylesheet' type='text/css'>

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="~/content/css/libs/font-awesome.css" />

    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/bundles/custom/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquerybootstrap/js")
    @Scripts.Render("~/bundles/kendo/js")
    @Scripts.Render("~/bundles/custom/js")
</head>
<body class="theme-whbl  pace-done fixed-header">
    
    @{ 
        User user = new User();
        user = (User)Session["user"];
        clsCommonFunction cmnFncs = new clsCommonFunction();
    }
    <div id="theme-wrapper">

        <!--Header -->
        <header class="navbar" id="header-navbar">
            <div class="container">
                <a id="logo" class="navbar-brand">
                    <img src="../Content/img/logo.png" alt="" class="normal-logo logo-white" />
                    <img src="../Content/img/logo-black.png" alt="" class="normal-logo logo-black" />
                    <img src="../Content/img/logo-small.png" alt="" class="small-logo hidden-xs hidden-sm hidden" />
                </a>

                <div class="clearfix">
                    <button class="navbar-toggle" data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="fa fa-bars"></span>
                    </button>

                    <div class="nav-no-collapse navbar-left pull-left hidden-sm hidden-xs">
                        <ul class="nav navbar-nav pull-left">
                            <li>
                                <a class="btn" id="make-small-nav">
                                    <i class="fa fa-bars"></i>
                                </a>
                            </li>

                        </ul>
                    </div>

                    <div class="nav-no-collapse pull-right" id="header-nav">
                        <ul class="nav navbar-nav pull-right">

                            <li class="dropdown profile-dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="@cmnFncs.GetImageURL(user)" alt="" />
                                    <span class="hidden-xs">@user.FirstName</span> <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="../Home/UserDetail"><i class="fa fa-user"></i>Profile</a></li>
                                    <li><a href="../Login/Logout"><i class="fa fa-power-off"></i>Logout</a></li>
                                </ul>
                            </li>
                            <li class="hidden-xxs">
                                <a class="btn" href="../Login/Logout">
                                    <i class="fa fa-power-off"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div id="page-wrapper" class="container">

            <!-- Left Menu -->
            <div class="row">
                <div id="nav-col">
                    <section id="col-left" class="col-left-nano">
                        <div id="col-left-inner" class="col-left-nano-content">
                            <div id="user-left-box" class="clearfix hidden-sm hidden-xs dropdown profile2-dropdown">
                                <img alt="" src="@cmnFncs.GetImageURL(user)" />
                                <div class="user-box">
                                    <span class="name">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                           @user.FirstName
                                        </a>
                                    </span>
                                </div>
                            </div>
                            <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                                <ul class="nav nav-pills nav-stacked">
                                    <li class="nav-header nav-header-first hidden-sm hidden-xs">
                                        Navigation
                                    </li>
                                    <li>
                                        <a href="../Activity/Activity">
                                            <i class="fa fa-dashboard"></i>
                                            <span>Activity</span>

                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="dropdown-toggle">
                                            <i class="fa fa-bar-chart-o"></i>
                                            <span>Reports</span>
                                            <i class="fa fa-angle-right drop-icon"></i>
                                        </a>
                                        <ul class="submenu">
                                            <li>
                                                <a href="../Report/ClientWise">
                                                    Client Related
                                                </a>
                                            </li>
                                            <li>
                                                <a href="../Report/DateWise">
                                                    Date Related
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    @if (user.UserType.ToUpper() == "W")
                                    {
                                    <li>
                                        <a href="../Home/CreatePatch">
                                            <i class="fa fa-table"></i>
                                            <span>Upload Patch</span>
                                        </a>
                                    </li>
                                    }
                                    <li>
                                        <a href="../PatchList/PatchList">
                                            <i class="fa fa-th-large"></i>
                                            <span>Patch List</span>

                                        </a>

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <div id="content-wrapper">

                <!-- Main Content Of The Page  -->
                <div class="row">
                    <div class="col-lg-9">
                        @RenderBody()
                    </div>
                </div>

                <!-- Footer Area-->
                <footer id="footer-bar" class="row">
                    <div class="container">
                        <div class="col-xs-9">
                            <p id="footer-copyright" class="col-xs-9">
                                Copyright © 1999 - @DateTime.Now.Year INSZoom.com,Inc. All rights reserved
                            </p>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
